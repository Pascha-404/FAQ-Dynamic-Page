<%- include('./partials/header.ejs') %>

<section class="faq-form edit">
    <h2>Edit a FAQ</h2>
    <form action="/" method="POST">
        <div class="input-container">
            <label for="form-title">Question:</label>
            <textarea class="form-title" name="title" id="form-title" type="text">
        </div>
        <div class="input-container">
            <label for="form-text">Answer:</label>
            <textarea class="form-text" name="text" id="form-text" cols="30" rows="3"></textarea>
        </div>
        <button>Submit</button>
    </form>
</section>

